/* miniprogram/pages/my_publish/my_publish.wxss */
page{
  background-color: #e9e9e9;
    height: 100%;
    font-family: 'PingFang SC',
                 'Helvetica Neue',
                 Helvetica,
                 'Droid Sans Fallback',
                 'Microsoft Yachei',
                 sans-serif;
}
.top{
  height: 75px;
  background: #00ced1;
  width: 100%;
}
.top-navigation{
  display: flex;
  flex-direction: row;
  justify-content: space-around;
  align-items: center;
  height: 30px;
  font-size: 80%;
  background-color: white;
  border-bottom: 1px solid #e9e9e9;
}
.appoint{

  color: orange;
  border-bottom: 2px solid orange;
}
.else-appoint{

}
.match{

  color: orange;
  border-bottom: 2px solid orange;
}
.else-match{

}
.state{

  color: orange;
  border-bottom: 2px solid orange;
}
.else-state{

}
.tips{
  margin-top: 50px;
  text-align: center;
  color: gray;
}
.content{
  background-color:white;
}
.per-people{
  display: flex;
  height: 72px;
  flex-direction: row;
  background: white;
  border-bottom: 0.5px solid #f4f4f4;
  /* box-shadow: 8px 4px 10px 2px gainsboro; */
}
/* 图片box */
.img{
  width: 60px;
  height: 60px;
  margin: 6px;
  border-radius: 10px;
  box-shadow: 4px 4px 10px  gray;
}
.img-box{
  display: flex;
  flex-direction: column;
}
/* 信息栏 */
.text{
  display: flex;
  flex-direction: column;
}
.nike-name{
  margin-top: 8px;
  margin-left: 10px;
  color: gray;
  font-weight:  bold;
  font-size: 100%;
}
.publish-time{
  margin-top: 15px;
  margin-left: 10px;
  font-size: 80%;
  color: gray;
  font-weight: bold;
}
.type{
  margin-top: 15px;
  margin-left: 15px;
  color: blue;
  font-size: 80%;
  font-weight: bold;
}
.delete-people{
  position: absolute;
  right: 30rpx;
  /* bottom: 30rpx; */
  margin-bottom: 20rpx;
  margin-top: 39px;
  font-size: 70%;
  color: red;
}
.view-people{
  position: absolute;
  right: 30rpx;
  margin-top: 4px;
  font-size: 70%;
  color: red;
}
.mask{
    width: 100%;
    height: 100%;
    position: fixed;
    top: 0;
    left: 0;
    background: #000;
    z-index: 9000;
    opacity: 0.5;
}
/* 弹出层 */
.modalDlg{
    width: 80%;
    position: fixed;
    top: 70px;
    left: 0;
    right: 0;
    z-index: 9999;
    margin: 0 auto;
    background-color: #fff;
    border-radius:5px;
    display: flex;
    flex-direction: column;
    align-items: center;
}
/* 赛事详情样式 */
.match-img{
  width: 200px;
  height: 150px;
  margin: 20px auto;
  border: 1px solid gainsboro;
}
.match-img image{
  width: 100%;
  height:100%;
}
.detail-box{
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}
.match-type-text{
  font-size: large;
  font-weight: bold;
  color: orangeredl;
}
/* 弹出层里面的按钮 */
.ok{
  width: 80px;
  height: 35px;
  background: #44b549;
  line-height: 35px;
  text-align: center;
  color: #fff;
  font-size: 15px;
  margin:20px auto;
  border-radius: 100px;
}
.text1 {
  text-align: justify;
  font-size: 14px;
  color: #666;
  width: 180px;
  margin-top: 10px;
}
.type-title{
  display: flex;
  justify-content: center;
}