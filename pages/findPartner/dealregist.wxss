/* pages/Upload/Upload.wxss */
page{
    height: 100%;
    font-family: 'PingFang SC',
                 'Helvetica Neue',
                 Helvetica,
                 'Droid Sans Fallback',
                 'Microsoft Yachei',
                 sans-serif;
}
.whole-page{
  width: 100%;
  display: flex;
  justify-content: center;
}
.bg-img-box{
  width: 100%;
  height: 180px;
}
.bg-img-box image{
  width: 100%;
  height: 100%;
}
.hole-page{
  position: absolute;
  top: 150px;
  width: 92%;
  box-shadow: 0px 0px 10px 2px gainsboro;
  border-radius: 5px;
}
.add-photo-box{
  display: flex;
  justify-content: center;
}
.add-photo-box image{
  margin-top: 70rpx;
  margin-left: 50px;
  margin-right: 50px;
  height: 400rpx;
  border: 1px solid #f4f4f4;
  box-shadow: 0px 0px 8px 2px #f4f4f4;
}
/* //选择地图样式 */
.choose-position-box{
  display: flex;
  justify-content: center;
}
.choose-button{
  margin-top: 40px;
  width: 240px;
  font-size: 90%;
}
.tui-picker-content{
  display : flex;
  margin : 30px;
  justify-content: center;
}
.piker-box{
  border-bottom: 1px solid orange;
}
.tui-picker-detail{
  background-color: #fff;
  text-align: center;
}
.button{
  margin:50px;
  color:white;
}
.textInput{
  background-color:white;
  border-bottom: 1px solid orange;
  width : 200px;
  confirm-type:done;
}
/* placeHolder样式 */
.center{
  text-align: center;
}







