/* miniprogram/pages/index/index.wxss */
page{
  width: 100%;
  background: #f5f5f5;
  font-family: 'PingFang SC',
                 'Helvetica Neue',
                 Helvetica,
                 'Droid Sans Fallback',
                 'Microsoft Yachei',
                 sans-serif;
}
.button-box{
  border-bottom: 10px solid #f4f4f4;
  display: flex;
  flex-direction: column;
  align-items: center;
}
.button-box image{
  margin-top: 100px;
  height: 100px;
  width: 100px;
  border-radius: 100%;
}
.button-box .text{
  display: flex;
  flex-direction: column;
  width: 260px;
  margin-top: 40px;
  align-items: center;
}
.button-box button{
  margin-top: 40px;
  width: 450rpx;
  color: #00ced1;
  border-color: #00ced1;
  height: 45px;
}