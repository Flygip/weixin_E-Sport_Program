page{
  background-color: #e9e9e9;
    height: 100%;
    font-family: 'PingFang SC',
                 'Helvetica Neue',
                 Helvetica,
                 'Droid Sans Fallback',
                 'Microsoft Yachei',
                 sans-serif;
}
.top{
  height: 75px;
  background: #00ced1;
  width: 100%;
}
.top-navigation{
  display: flex;
  flex-direction: row;
  justify-content: space-around;
  align-items: center;
  height: 30px;
  font-size: 80%;
  background-color: white;
  border-bottom: 1px solid #e9e9e9;
}
.recent{
  color: orange;
  border-bottom: 2px solid orange;
}
.else-recent{
}
.all{

  color: orange;
  border-bottom: 2px solid orange;
}
.else-all{

}
.tips{
  margin-top: 50px;
  text-align: center;
  color: gray;
}
/* 收藏条目 */
.content{
  /* margin-top: 5px; */
  /* margin-bottom: 10px; */
  background-color:white;
}
.per-people{
  display: flex;
  height: 72px;
  flex-direction: row;
  border: 1px solid white;
  border-bottom: 0.5px solid #f4f4f4;
  /* box-shadow: 8px 4px 10px 2px gainsboro; */
}
/* 图片box */
.img{
  width: 60px;
  height: 60px;
  margin: 6px;
  border-radius: 100%;
  box-shadow: 0px 0px 4px 2px  gainsboro;
}
.img-box{
  display: flex;
  flex-direction: column;
}
/* 信息栏 */
.text{
  display: flex;
  flex-direction: column;
}
.nike-name{
  margin-top: 10px;
  color: gray;
  font-weight:  bold;
  font-size: 100%;
}
.delete-people{
  position: absolute;
  right: 30rpx;
