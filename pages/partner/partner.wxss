/* miniprogram/pages/center/center.wxss */
page {
    height: 100%;
    font-family: 'PingFang SC',
                 'Helvetica Neue',
                 Helvetica,
                 'Droid Sans Fallback',
                 'Microsoft Yachei',
                 sans-serif;
}
.top-choice{
  display: flex;
  justify-content: space-around;
  width: 100%;
  height: 70rpx;
  border-bottom: 0.5px solid #f4f4f4;
  /* box-shadow: 8px 4px 10px 2px gainsboro; */
}
.to-classify{
  display: flex;
  margin-right: 30rpx;
}
.all-product{
  display: flex;
  margin-right: 30rpx;
}
.to-classify text{
  margin-top: 10rpx;
}
.all-product text{
  margin-top: 10rpx;
}
.all-product image{
  margin-top: 10rpx;
  margin-left: 5rpx;
  height: 50rpx;
  width: 50rpx;
}
.to-classify image{
  margin-top: 10rpx;
  height: 50rpx;
  width: 50rpx;
}
.content{
  /* margin-top: 5px; */
  margin-bottom: 10px;
  background-color:white;
}
.per-people{
  display: flex;
  height: 140px;
  flex-direction: row;
  border: 1px solid white;
  border-bottom: 0.5px solid #f4f4f4;
  /* box-shadow: 8px 4px 10px 2px gainsboro; */
}
/* 图片box */
.img{
  width: 90px;
  height: 90px;
  margin: 6px;
  border-radius: 10px;
  box-shadow: 4px 4px 10px  gray;
}
.img-box text{
  margin-top: 10px;
  margin-left: 6px;
  font-size: 65%;
  font-weight: bold;
  color: black;
}
.img-box{
  display: flex;
  flex-direction: column;
}
/* 信息栏 */
.introduce_text{
  /* display: flex;
  flex-direction: column; */
  height: 140px;
  width: 410rpx;
  margin-top: 5px;
  margin-left: 15px;
  font-size: 80%;
  color: black;
}
.text{
  display: flex;
  flex-direction: column;
}
.nike-name{
  margin-top: 10rpx;
  color: orange;
  font-size: large;
}
.type{
  margin-top: 10rpx;
  color: #4d4dff;
}
.label{
  margin-top: 10rpx;
  color: black;
}
.people-label{
  position: absolute;
  right: 30rpx;
  /* bottom: 30rpx; */
  margin-bottom: 20rpx;
  margin-top: 110px;
  font-size: 70%;
  color: red;
}
/* 侧边栏样式 */
.page-slidebar {
    /* height: 50%; */
    width: 180px;
    /* position: absolute; */
    background-color:white;
}
 
/* 控制侧边栏的内容距离顶部的距离 */
.page-content {
    padding-top: 50rpx;
}
/* 主页样式 */
.page-top {
    height: 100%;
    position: absolute;
    width: 750rpx;
    background-color:white;
    z-index: 999;
    transition: All 0.4s ease;
    -webkit-transition: All 0.4s ease;
}
/* 筛选栏样式*/
.piker-box{
  margin-top: 50rpx;
  align-items: center;
  font-size: 15px;
  border-bottom: 1px solid #f4f4f4;
}
.submit button{
  margin-top: 100rpx;
  margin-bottom: 20px;
  height: 100rpx;
  color: orangered;
  border-color: orangered;
  width: 240rpx;
}
/* 弹窗样式 */
/* 遮罩层 */
.mask{
    width: 100%;
    height: 100%;
    position: fixed;
    top: 0;
    left: 0;
    background: #000;
    z-index: 9000;
    opacity: 0.5;
}
/* 弹出层 */
.modalDlg{
    width: 70%;
    /* height: 300px; */
    position: fixed;
    top: 50px;
    left: 0;
    right: 0;
    z-index: 9999;
    margin: 0 auto;
    background-color: #fff;
    border-radius:5px;
    display: flex;
    flex-direction: column;
    align-items: center;
}
/* 弹出层里面的图片 */
.modalDlg image{
  width: 120px;
  height: 120px;
  margin-top: 30px;
}
