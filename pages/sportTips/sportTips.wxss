/* miniprogram/pages/sportTips/sportTips.wxss */
page{
  width: 100%;
  background: #f4f4f4;
  font-family: 'PingFang SC',
                 'Helvetica Neue',
                 Helvetica,
                 'Droid Sans Fallback',
                 'Microsoft Yachei',
                 sans-serif;
}
.top{
  height: 80px;
  background: linear-gradient(to right,#00ffff,#00ced1);
  width: 100%;
  /* border-bottom-left-radius: 50px;
  border-bottom-right-radius: 50px; */
}
.top-navigation{
  display: flex;
  flex-direction: row;
  justify-content: space-around;
  align-items: center;
  height: 35px;
  font-size: 80%;
  background-color: white;
  border-bottom: 1px solid #e9e9e9;
}
.before-sport{
  color: #00ced1;
  font-size: 16px;
  border-bottom: 2px solid #00ced1;
  padding-bottom: 6px;
  padding-left: 10px;
  padding-right: 10px;
}
.else-before-sport{
}
.sport-tips{
  color: #00ced1;
  font-size: 16px;
  border-bottom: 2px solid #00ced1;
  padding-bottom: 6px;
  padding-left: 10px;
  padding-right: 10px;
}
.else-sport-tips{

}
.rest-tips{
  color: #00ced1;
  font-size: 16px;
  border-bottom: 2px solid #00ced1;
  padding-bottom: 6px;
  padding-left: 10px;
  padding-right: 10px;
}
.else-rest-tips{

}
.tips-box{
  background: #f4f4f4;
  display: flex;
  justify-content: center;
}
.per-text{
  margin-top: 8px;
  border-radius: 5px;
  background: white;
}
.time-glance{
  display: flex;
  flex-direction: row;
  padding-top: 15px;
  font-size: 80%;
}
.title{
  margin-top: 12px;
  border-bottom: 1px solid gainsboro;
  margin-right: 30px;
  padding-bottom: 15px;
  font-weight: bold;
}
.author-box{
  display: flex;
  flex-direction: row;
  padding-bottom: 15px;
}
.from{
  display: flex;
  height: 20px;
  line-height: 20px;
  font-size: 80%;
  margin-top: 15px;
  color: gray;
}
.author{
  display: flex;
  justify-content: center;
  line-height: 20px;
  width: 90px;
  height: 20px;
  margin-top: 15px;
  font-size: 80%;
  background: #e0ffff;
  border-radius: 20px;
}
.author text{
  padding-left: 5px;
  padding-right: 5px;
  color:blue;
}
/* 遮罩层 */
.mask{
    width: 100%;
    height: 100%;
    position: fixed;
    top: 0;
    left: 0;
    background: #000;
    z-index: 9000;
    opacity: 0.3;
}
/* 弹出层 */
.modalDlg{
    width: 85%;
    position: fixed;
    top: 110px;
    left: 0;
    right: 0;
    z-index: 9999;
    margin: 0 auto;
    background-color: white;
    border-radius:5px;
    display: flex;
    flex-direction: column;
    align-items: center;
}
.ok{
  width: 80px;
  height: 35px;
  background: #44b549;
  line-height: 35px;
  text-align: center;
  color: white;
  font-size: 15px;
  margin:20px auto;
  border-radius: 100px;
}
.detail-box{
  width: 90%;
  margin-top: 20px;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}
.detail-author{
  font-size: 80%;
  padding: 8px;
  color: #00ced1;
}
.detail-text{
  font-size: 110%;
  color: gray;
}
.detail-title{
  font-size: 100%;
  font-weight: bolder;
}